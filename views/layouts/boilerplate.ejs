<%#This is our boilerplate code in which all the other ejs files will be using, this file uses the ejs-mate package to
    render the ejs files.We will also be using bootstrap %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Boilerplate</title>
        <%# Bootstrap link to use bootstrap %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
                crossorigin="anonymous">



    </head>

    <body class="d-flex flex-column vh-100">
        <%- include('../partials/navbar')%>
            <%#Includes the navbar.ejs code to be used here%>
                <main class="container mt-5">
                    <%- include('../partials/flash')%>
                        <%= success %>
                            <%# success is from connect-flash package%>
                                <%- body -%>
                </main>
                <%#Bootstrap script to use bootstrap%>
                    <%- include('../partials/footer')%>
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                            crossorigin="anonymous"></script>

                        <%#JavaScript for disabling form submissions if there are invalid fields%>
                            <script src='/javascripts/validateForms.js'></script>

    </body>

    </html>